{
  "git": {
    "requireBranch": "main",
    "commitMessage": "Release v${version}",
    "tagName": "v${version}"
  },
  "hooks": {
    "before:init": ["yarn typecheck", "yarn lint", "yarn prepare"]
  },
  "npm": {
    "publish": true
  },
  "github": {
    "releaseName": "v${version}",
    "release": true
  }
}
