{
  "git": {
    "commitMessage": "Release ${version}",
    "tagName": "v${version}"
  },
  "hooks": {
    "before:init": ["npm run typecheck", "npm run lint", "npm run prepare"]
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  }
}
